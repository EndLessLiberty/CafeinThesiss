<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_request_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_profile_layout"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/request_text_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/default_avatar"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/request_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/request_name_text_layout"
        android:layout_alignStart="@+id/request_name_text_layout"
        android:layout_below="@+id/request_name_text_layout"
        android:padding="0dp"
        android:text="Message Text"
        android:textColor="#444444"
        android:textSize="14sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/request_name_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/request_profile_layout"
        android:layout_toRightOf="@+id/request_profile_layout"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/request_time_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/request_name_text_layout"
        android:layout_toRightOf="@+id/request_name_text_layout"
        android:text="00:00"
        android:textSize="12sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bar_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/request_text_layout"
        android:layout_alignLeft="@+id/request_text_layout"
        android:layout_below="@+id/request_text_layout"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/request_profile_layout"
        android:layout_toRightOf="@+id/request_profile_layout"
        android:padding="0dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/buttonFriendRequestDecline"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/buttonFriendRequestAccept"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/buttonFriendRequestAccept"
        android:layout_toRightOf="@+id/buttonFriendRequestAccept"
        android:background="@color/colorRedButton"
        android:text="Reddet"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonFriendRequestAccept"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/request_text_layout"
        android:layout_alignStart="@+id/request_text_layout"
        android:layout_below="@+id/request_text_layout"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="18dp"
        android:background="@color/colorGreenButton"
        android:text="Kabul Et"
        android:visibility="invisible" />


</RelativeLayout>