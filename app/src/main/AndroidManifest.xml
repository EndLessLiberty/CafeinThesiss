<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weysi.firabaseuserregistration">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cafein"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.SignUpActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".activitys.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.MainPageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.InPlaceCheckInActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.NearbyPlaceActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.ProfileSettingsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.TimeLineActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.AnotherUserProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.ChatActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.MessageActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.PersonalUserProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.NotificationsActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="incom.example.weysi.firabaseuserregistration.activitys_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.PlaceActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.StatisticsActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>